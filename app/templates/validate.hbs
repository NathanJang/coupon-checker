<div class="col-sm-6 col-sm-offset-3">
  <form {{action "onSubmit" couponId on="submit"}}>
    <div class="form-group {{if couponIdIsInvalid "has-error has-feedback"}}">
      {{input type="text" value=couponId class="form-control" placeholder="Coupon ID"}}
      {{#if couponIdIsInvalid}}
        <span class="glyphicon glyphicon-remove form-control-feedback" aria-hidden="true"></span>
      {{/if}}
    </div>
    <div class="form-group">
      <button class="btn btn-default">Enter</button>
    </div>
    <div class="form-group">
      {{input type="text" value=hash class="form-control" readonly="readonly" placeholder="Validation Code"}}
    </div>
  </form>
</div>
