<div class="col-sm-6 col-sm-offset-3">
  <form class={{if shouldDisplayWarning "has-error has-feedback"}} {{action "onSubmit" password on="submit"}}>
    <div class="form-group">
      {{input type="password" value=password class="form-control" placeholder="password"}}
      {{#if shouldDisplayWarning}}
        <span class="glyphicon glyphicon-remove form-control-feedback" aria-hidden="true"></span>
      {{/if}}
    </div>
    <div class="form-group">
      <button class="btn btn-default">Enter</button>
    </div>
  </form>
</div>
